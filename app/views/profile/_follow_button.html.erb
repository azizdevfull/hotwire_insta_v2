<%= turbo_frame_tag(dom_id(@user)) do %>
    <% if following?(user) %>
        <%= button_to "Unfollow", profile_unfollow_path(id: user.id), method: :delete, class: "btn btn-outline-primary common-btn edit-profile-btn" %>
    <% else %>
        <%= button_to "Follow", profile_follow_path(id: user.id), method: :post, class: "btn btn-outline-primary common-btn edit-profile-btn" %>
    <% end %>
<% end %>