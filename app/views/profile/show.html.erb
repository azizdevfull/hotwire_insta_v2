<div class="row justify-content-md-center profile-wrapper">
  <div class="col-md-4 text-center">
    <%= image_tag @user.avatar, width: '152', height: '152', class: "round-img" %>
  </div>
  <div class="col-md-8">
    <div class="row">
      <p class="username"><%= @user.username %></p>
      <button class="btn btn-outline-dark common-btn edit-profile-btn">Edit Profile</button>
      <button type="button" class="core-sprite setting" data-bs-toggle="modal" data-bs-target="#exampleModal"></button>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Settings</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <div class="list-group text-center">
              <a href="" class="list-group-item list-group-item-action">Change Password</a>
              <%= button_to "Sign out", destroy_user_session_path, method: :get, 
              class: "dropdown-item" %>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <p class="email">
        <%= @user.email %>
      </p>
    </div>
  </div>
</div>
