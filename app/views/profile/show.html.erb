<div class="row justify-content-md-center profile-wrapper">
  <div class="col-md-4 text-center">
    <%= image_tag @user.avatar, width: '152', height: '152', class: "round-img" %>
  </div>
  <div class="col-md-8">
    <div class="row">
      <p class="username"><%= @user.username %>
      
      <% if @user == current_user %>      
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-dark common-btn edit-profile-btn"%>
      <button type="button" class="core-sprite setting" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-gear-wide"></i></button>
    
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Settings</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <div class="list-group text-center">
              <a href="" class="list-group-item list-group-item-action">Change Password</a>
              <%= button_to "Sign out", destroy_user_session_path, method: :get, 
              class: "list-group-item list-group-item-action" %>
              <a href="" class="list-group-item list-group-item-action" data-dismiss="modal">Cancel</a>
              </div>
          </div>
        </div>
      </div>
      <% end %>

      </p>
    </div>
    <div class="row">
      <p class="email"><%= @user.email %></p>
    </div>
  </div>


<div class="profile-tab">
<% if @user == current_user %>
<nav>
  <div class="nav nav-tabs d-flex justify-content-center" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-posts-tab" data-bs-toggle="tab" data-bs-target="#nav-posts" type="button" role="tab" aria-controls="nav-posts" aria-selected="true">POSTS</button>
    <button class="nav-link" id="nav-saved-tab" data-bs-toggle="tab" data-bs-target="#nav-saved" type="button" role="tab" aria-controls="nav-saved" aria-selected="false">SAVED</button>
  </div>
</nav>
<% else %>
<nav>
  <div class="nav nav-tabs d-flex justify-content-center" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-posts-tab" data-bs-toggle="tab" data-bs-target="#nav-posts" type="button" role="tab" aria-controls="nav-posts" aria-selected="true">POSTS</button>
  </div>
</nav>
<% end %>

<div class="tab-content pb-3" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-posts" role="tabpanel" aria-labelledby="nav-posts-tab">
  <div class="row">
    <%= render 'post', {posts: @posts} %>
  </div>
  </div>
  <div class="tab-pane fade" id="nav-saved" role="tabpanel" aria-labelledby="nav-saved-tab">
    <div class="row">
    <%= render 'bookmark', {bookmarks: @bookmarks} %>
  </div>
  </div>

</div>
</div>



</div>

















